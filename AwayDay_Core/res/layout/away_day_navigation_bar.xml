<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="3dp"
              android:background="@drawable/header_color"
              android:orientation="horizontal">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/contact_back"
                  android:clickable="true"
                  android:background="@drawable/ic_pin_sq_left"
                  android:paddingTop="3dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="5dp"
                  android:layout_marginLeft="5dp"
            >
        <ImageView android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:id="@+id/location_detail_btn_back"
                   android:clickable="true"
                   android:src="@drawable/ic_back"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/contact_save"
                  android:clickable="true"
                  android:background="@drawable/ic_pin_sq_left"
                  android:paddingTop="3dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="5dp"
                  android:layout_marginRight="10dp"
                  android:visibility="invisible"
            >
        <TextView android:text="@string/contact_save"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:gravity="center_vertical"
                  android:paddingTop="3dp"
                />
    </LinearLayout>
</LinearLayout>